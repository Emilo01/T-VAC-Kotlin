<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/treeImg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="Tree Image"
            tools:src="@drawable/ic_oak" />

        <TextView
            android:id="@+id/treeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ağaç İsmi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="12dp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/treeTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sıcaklık: 25°C"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:textAlignment="center"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/treeHumadity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nem: 50%"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/treeFeatures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Güçlü ve dayanıklıdır, geniş alanlara ihtiyaç duyar."
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="#888888"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
